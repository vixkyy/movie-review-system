<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @movie.name %>
</p>

<strong>Image:</strong>
<div>
  <% if @movie.image.attached? %>
    <%= image_tag @movie.image%>
  <%else%>
    <p>No image attached</p>
  <%end%>
</div>

<p>
  <strong>Release date:</strong>
  <%= @movie.release_date %>
</p>

<p>
  <strong>Director:</strong>
  <%= @movie.director %>
</p>

<p>
  <strong>Actor:</strong>
  <%= @movie.actor %>
</p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
